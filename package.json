{
  "name": "@sohanemon/utils",
  "version": "6.4.1",
  "author": "Sohan Emon <sohanemon@outlook.com>",
  "description": "",
  "type": "module",
  "files": [
    "dist"
  ],
  "source": "./src/index.ts",
  "types": "./dist/index.d.cts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.cjs"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "hooks": [
        "dist/hooks.d.ts"
      ],
      "components": [
        "dist/components.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:run": "vitest run --silent",
    "test:bench": "vitest bench --run --silent",
    "test:list": "vitest list",
    "test:log": "vitest run --reporter verbose",
    "test:ui": "vitest --ui",
    "check": "biome check .",
    "fix": "biome check --diagnostic-level=error --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write --unsafe .",
    "format": "biome format .",
    "format:write": "biome format . --write",
    "typecheck": "tsgo --noEmit",
    "playground": "cd playground && npm run dev",
    "release": "tsgo --noEmit && npm run build && npm publish"
  },
  "keywords": [
    "utils",
    "cn"
  ],
  "license": "ISC",
  "homepage": "https://sohanjs.web.app/utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sohanemon/utils.git"
  },
  "bugs": {
    "url": "https://github.com/sohanemon/utils/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.14",
    "jsdom": "^27.2.0",
    "tsdown": "^0.16.4",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@^7.2.5",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@iconify/react": "^6.0.2",
    "@radix-ui/react-slot": "^1.2.4",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "typedoc": "^0.28.15"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
